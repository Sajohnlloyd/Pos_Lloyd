<?php
include_once "ui/connectdb.php";
session_start();

if (isset($_POST['btn_login'])) {
    $userInput = trim($_POST['txt_user']);   // Can be email or username
    $password  = $_POST['txt_password'];

    //  Check if user exists (match email or username)
    $select = $pdo->prepare("SELECT * FROM tbl_user2 WHERE usermail = :login OR username = :login");
    $select->bindParam(':login', $userInput);
    $select->execute();
    $row = $select->fetch(PDO::FETCH_ASSOC);

    if ($row) {   
        //  Verify hashed password
        if (password_verify($password, $row['password'])) {
            //  Store session info
            $_SESSION['username'] = $row['username'];
            $_SESSION['usermail'] = $row['usermail'];
            $_SESSION['status'] = 'Login successful! Redirecting...';
            $_SESSION['status_code'] = 'success';

            //  Redirect to dashboard after short delay
            echo '<meta http-equiv="refresh" content="2;url=ui/dashboard.php">';
        } else {
            $_SESSION['status'] = 'Incorrect password!';
            $_SESSION['status_code'] = 'error';
        }
    } else {
        $_SESSION['status'] = 'Email or Username not found!';
        $_SESSION['status_code'] = 'error';
    }
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>POS BARCODE_SYSTEM_Log in</title>

